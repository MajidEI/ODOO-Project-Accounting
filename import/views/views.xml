<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="import_import.list">
      <field name="name">import list</field>
      <field name="model">import.import</field>
      <field name="arch" type="xml">
        <tree>
          <field name="res_model" />
          <field name="file"/>
          <field name="file_type"/>
          <button name="import_file" string="Import Invest" type="object"/>
        </tree>
      </field>
    </record>

    <!--explicit kanban view definition -->
    <record id="import_import_view" model="ir.ui.view">
      <field name="name">import.kanban</field>
      <field name="model">import.import</field>
      <field name="arch" type="xml">
        <kanban>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                  <div class="o_kanban_image">
                      <img alt="Avatar" t-att-src="kanban_image('import.import', 'image_medium',record.name)"/>
                  </div>
                  <div class="oe_kanban_details">
                      <strong class="o_kanban_record_title">
                        Import records to invest
                      </strong>
                    </div>
                  <div class="o_kanban_button" >
                      <button name="get_fields" class="o_follow_btn o_follow btn btn-sm btn-primary oe_kanban_action oe_kanban_action_button" string="Import Invest" type="button"/>
                  </div>
              </div>
          </t>
          </templates>
      </kanban>
      </field>
  </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="import_import.action_window">
      <field name="name">import window</field>
      <field name="res_model">import.import</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="import.action_server">
      <field name="name">import server</field>
      <field name="model_id" ref="model_import_import"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "kanban,tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    
    <menuitem name="import" id="import.menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="import.menu_1" parent="import.menu_root"/>
    <menuitem name="Menu 2" id="import.menu_2" parent="import.menu_root"/>
  
    <!-- actions -->
    
    <menuitem name="List" id="import.menu_1_list" parent="import.menu_1"
              action="import.action_window"/>
    <menuitem name="Server to list" id="import" parent="import.menu_2"
              action="import.action_server"/>
    
  </data>
</odoo>