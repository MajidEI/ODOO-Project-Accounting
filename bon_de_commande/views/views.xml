<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="bon_de_commande.list">
      <field name="name">BonDeCommande list</field>
      <field name="model">bon_de_commande.bon_de_commande</field>
      <field name="arch" type="xml">
        <tree>
          <field name="quantite"/>
          <field name="designation"/>
          <field name="price"/>
          <field name="montant"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="bon_de_commande.action_window">
      <field name="name">BonDeCommande window</field>
      <field name="res_model">bon_de_commande.bon_de_commande</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="bon_de_commande.action_server">
      <field name="name">BonDeCommande server</field>
      <field name="model_id" ref="model_bon_de_commande_bon_de_commande"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    

    <!-- Top menu item -->
    
    <menuitem name="BonDeCommande" id="bon_de_commande.menu_root"/>
    
    <!-- menu categories -->
    <menuitem name="Menu 1" id="bon_de_commande.menu_1" parent="bon_de_commande.menu_root"/>
    <menuitem name="Menu 2" id="bon_de_commande.menu_2" parent="bon_de_commande.menu_root"/>
    <!-- actions -->
    
    <menuitem name="List" id="bon_de_commande.menu_1_list" parent="bon_de_commande.menu_1"
              action="bon_de_commande.action_window"/>
    <menuitem name="Server to list" id="bon_de_commande" parent="bon_de_commande.menu_2"
              action="bon_de_commande.action_server"/>
    
  </data>
</odoo>